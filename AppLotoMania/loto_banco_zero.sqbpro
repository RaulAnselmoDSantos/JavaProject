            CREATE TABLE IF NOT EXISTS jogadores (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                nome TEXT NOT NULL,
                telefone TEXT
            );

            -- Tabela de grupos de jogos fixos
            CREATE TABLE IF NOT EXISTS grupos_fixos (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                nome TEXT NOT NULL
            );

            -- Jogos fixos vinculados a jogadores e grupos
            CREATE TABLE IF NOT EXISTS jogos_fixos (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                grupo_id INTEGER NOT NULL,
                jogador_id INTEGER NOT NULL,
                nome TEXT NOT NULL,
                numeros TEXT NOT NULL,
                FOREIGN KEY (grupo_id) REFERENCES grupos_fixos(id),
                FOREIGN KEY (jogador_id) REFERENCES jogadores(id)
            );

            -- Concursos (sorteios)
            CREATE TABLE IF NOT EXISTS concursos (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                descricao TEXT NOT NULL,
                numeros TEXT -- 20 dezenas ou NULL
            );

            -- Jogos concretos aplicados em concursos
            CREATE TABLE IF NOT EXISTS jogos (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                concurso_id INTEGER NOT NULL,
                jogador_id INTEGER NOT NULL,
                numeros TEXT NOT NULL,
                acertos INTEGER DEFAULT 0,
                FOREIGN KEY (concurso_id) REFERENCES concursos(id),
                FOREIGN KEY (jogador_id) REFERENCES jogadores(id)
            );

            -- √çndices de performance
            CREATE INDEX IF NOT EXISTS idx_jogos_concurso ON jogos(concurso_id);
            CREATE INDEX IF NOT EXISTS idx_jogos_jogador ON jogos(jogador_id);
            CREATE INDEX IF NOT EXISTS idx_jogos_acertos ON jogos(acertos);

            CREATE INDEX IF NOT EXISTS idx_fixos_grupo ON jogos_fixos(grupo_id);
            CREATE INDEX IF NOT EXISTS idx_fixos_jogador ON jogos_fixos(jogador_id);</sql><current_tab id="0"/></tab_sql></sqlb_project>
